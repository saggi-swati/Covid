<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.android.covid.home.ui.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_deep_dive"
        android:name="com.android.covid.deepdive.ui.DeepDiveFragment"
        android:label="@string/title_deep_dive"
        tools:layout="@layout/covid_deep_dive_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.android.covid.covidnews.ui.CovidNewsFragment"
        android:label="@string/title_about_covid"
        tools:layout="@layout/fragment_covid_news" />
</navigation>
